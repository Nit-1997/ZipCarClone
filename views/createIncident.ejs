<section class="bbc">
    <% if(error && error.length>0){%>
    <div class="container">
        <div class="alert alert-danger" role="alert">
            <%=error%>
        </div>
    </div>
    <% }%>
    <% if(success && success.length>0){%>
    <div class="container">
        <div class="alert alert-success" role="alert">
            <%=success%>
        </div>
    </div>
    <% }%>
    <div class="row">
        <div class="col-sm-6 col-xs-12 center-col ht900 lp">
            <div class="row lg">
                <h1>Create an incident</h1>
                <form action="/incident/addIncident" method="POST">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" class="form-control" name="title" id="name" aria-describedby="name" placeholder="Enter Title of the incident" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Description</label>
                        <input type="text" class="form-control" name="description" id="name" aria-describedby="name" placeholder="Enter description of the incident" required>
                    </div>


                    <div class="form-group">
                        <label for="address">Severity :-</label>
                        <hr/>
                        <label for="rentalRate">P1</label>
                        <input name="severity" type="radio"  id="P1" value="P1">
                        <br/>
                        <label for="rentalRate">P2</label>
                        <input  name="severity" type="radio"  id="P2" value="P2">
                        <br/>
                        <label for="rentalRate">P3</label>
                        <input name="severity" type="radio"  id="P3" value="P3">
                        <br/>
                    </div>

                    <input type="hidden" name="leaseOrderId" id="dtp_input1" value=<%=leaseOrderId%> /><br/>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12 center-col ht900 lt"></div>
    </div>
</section>


